    <div class="row">
        <div class="col-md-8">
            <h3>List Subjects</h3>
            <table class="table table-striped table-bordered table-light">
                <thead class="thead-light">
                    <tr>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Name</td>
                            <td>@item.Email</td>
                            <td>
                                <div class="btn-group d-flex justify-content-center">
                                    <a class="btn btn-success mr-2 borderButon" href="/Admin/Update?id=@item.Id"><i class="fa fa-edit"></i>Update</a>
                                    <a class="btn btn-danger none borderButon" onclick="return window.confirm('Are you sure?')" href="/Admin/Delete?id=@item.Id"><i class="fa fa-trash"></i>Delete</a>

                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>