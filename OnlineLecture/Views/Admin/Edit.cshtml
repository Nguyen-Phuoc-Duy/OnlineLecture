@model OnlineLecture.Models.Domain.ApplicationUser


<form class="w-40" asp-action="Update" method="post">
    <h2 class="pb-10">Update User</h2>
    <input type="hidden" class="input" asp-for="Id">

    <div class="input-container">
        <label asp-for="UserName" class="w-40">UserName</label>
        <input type="text" class="input" asp-for="UserName">
    </div>
    <div class="message-box pd-x-28 error">
        <span asp-validation-for="UserName"> </span>
    </div>

    @if (TempData["msg"] != null)
    {
        <div class="alert mb-1">
            @TempData["msg"]
        </div>
    }

    <div class="input-container">
        <a class="btn btn-default" asp-action="Edit" asp-controller="Admin" type="submit">Save</a>
        <a class="btn btn-sec" href="/Admin/Display">All records</a>
    </div>
</form>