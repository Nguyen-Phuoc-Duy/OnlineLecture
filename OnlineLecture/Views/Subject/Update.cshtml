@model OnlineLecture.Models.DTO.SubjectModel
@{

}

<div class="container pt-5">
    <div class="row">
        <div class="col-md-6">
            <h3>Update Subject</h3>
            <form asp-action="Update" method="post">
                <input type="hidden" asp-for="IdSubject" />
                <div class="form-group mb-2">
                    <label asp-for="NameSubject">Name Subject*</label>
                    <input type="text" class="form-control" asp-for="NameSubject" />
                    <span asp-validation-for="NameSubject" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="Description">Description</label>
                    <input type="text" class="form-control" asp-for="Description" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                @if (TempData["msg"] != null)
                {
                    <div class="form-group">
                        @TempData["msg"]
                    </div>
                }

                <button type="submit" class="btn btn-success">Update</button>
                <a href="/Subject/GetAll" class="btn btn-primary">List Subject</a>

            </form>
        </div>
    </div>
</div>