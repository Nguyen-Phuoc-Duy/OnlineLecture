@model IEnumerable<OnlineLecture.Models.DTO.SubjectModel>
@{

}

<div class="container pt-5">
    <div class="row">
        <div class="col-md-6">
            <a class="btn btn-success" href="/Subject/Add">Add more</a>
        </div>
    </div>
    <div class="row">
        <div class="col-md-8">
            <h3>List Subjects</h3>
            <table class="table table-striped table-bordered table-light">
                <thead class="thead-light">
                    <tr>
                        <th>Name</th>
                        <th>Description</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.NameSubject</td>
                            <td>@item.Description</td>
                            <td>
                                <div class="btn-group d-flex justify-content-center">
                                    <a class="btn btn-success mr-2" href="/Subject/Update?id=@item.IdSubject">Update</a> 
                                    <a class="btn btn-danger" onclick="return window.confirm('Are you sure?')" href="/Subject/Delete?id=@item.IdSubject">Delete</a>
                                    
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>