
@model OnlineLecture.Models.DTO.LoginModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
	<head>
	<meta charset="UTF-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">	
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>login</title>
        
<style>

form {
  border: 3px solid #f1f1f1;
  width:60%;
  margin:auto;
  margin-top:5%;
}

input[type=text], input[type=password] {
  width: 100%;
  padding: 12px 20px;
  margin: 8px 0;
  display: inline-block;
  border: 1px solid #ccc;
  box-sizing: border-box;
}

button {
            background-color: #198754;
  color: white;
  padding: 14px 20px;
  margin: 8px 0;
  border: none;
  cursor: pointer;
  width: 100%;
}

        .btn-signup{
            background-color: #0d6efd;
            color: white;
            padding: 14px 20px;
            margin: 8px 0;
            border: none;
            cursor: pointer;
            width: 100% !important;
        }
.container {
  padding: 16px;
}

.msg{
  padding: 0px;
}


.err{
    color:red;
}
.onlec {
            display: flex;
            justify-content: center;
}
</style>
 
</head>
<body>
    
<form asp-action="Login" method="post">
        <h1 class="onlec">Online Lecture</h1>
  <div class="container">
    <label asp-for="Username"><b>Username</b></label>
    <input type="text" asp-for="Username" placeholder="Enter Username">
            <div class="msg">
            <span class="err" asp-validation-for="Username"></span>
            </div>



    <label asp-for="Password"><b>Password</b></label>
   <input  type="password" asp-for="Password" placeholder="Enter Password">
            <div class="msg">
            <span asp-validation-for="Password" class="err"></span>
            </div>


    @if(TempData["msg"]!=null){
                <div class="msg err">@TempData["msg"]</div>
    }

    <button type="submit">Login</button>
            <button type="button" class="btn-signup">
                <div>
                    <a class="text-alert btn-signup" href="/UserAuthentication/Registration">Not a user? Signup</a>

                </div>
                </button>
    
  </div>
</form>

</body>
</html>